#!/bin/bash
# List all documents in the 'school' collection in the specified database

# Check if the database name is provided
if [ -z "$1" ]; then
  echo "Usage: $0 <database_name>"
  exit 1
fi

# Use MongoDB to query and list all documents in the 'school' collection
mongo "$1" --eval 'db.school.find().forEach(printjson)'

